<h1>Carrito de Compras</h1>
{{#if carts.length}}
    {{#each carts}}
        <div class="cart">
            <h2>Carrito {{this._id}}</h2>
            <ul>
                {{#each this.products}}
                    <li>{{this.product.title}} - Cantidad: {{this.quantity}}</li>
                {{/each}}
            </ul>
        </div>
    {{/each}}
{{else}}
    <p>No hay carritos para mostrar.</p>
{{/if}}